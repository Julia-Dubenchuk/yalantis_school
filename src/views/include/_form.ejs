<form action="/api/users" method="POST" enctype="multipart/form-data" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="firstName" class="text-light">First Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="firstName" value="" placeholder="Mark Stoenis" />
    </div>
    <div class="form-group">
      <label for="lastName" class="text-light">Second Name</label>
      <input type="text" name="lastName" value="" placeholder="Mark Stoenis" />
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">Email</label>
      <input type="text" name="email" value="" placeholder="example@gmail.com" />
    </div>
    <div class="form-group">
      <label for="photo" class="text-light">Photo</label>
      <input type="file" name="photo" />
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
